<style>
	:global(#intro p) {
		text-shadow: 0 2px 14px rgba(0, 0, 0, 0.95);
	}

	.hero-wrapper {
		position: absolute;
		width: 100%;
		height: 80vh;
		overflow: hidden;
	}

	.hero-wrapper::before {
		content: "";
		position: absolute;
		width: 200%;
		height: 200%;
		top: -50%;
		left: -50%;
		background-image: url('/images/hero.jpg');
		background-size: cover;
		background-position: center;
		transform: rotate(-10deg);
	}

	.hero {
		position: relative;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		z-index: 10;
		background: linear-gradient(to bottom, #121212 0%, transparent 90%);
	}

	.hero::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		z-index: 10;
